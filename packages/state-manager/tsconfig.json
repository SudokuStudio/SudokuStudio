{
  "include": ["src/**/*"],

  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES2017",
    "lib": [
      "ES2017"
    ],
    "outDir": "lib",
    "module": "CommonJS",

    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "declaration": true
  }
}
