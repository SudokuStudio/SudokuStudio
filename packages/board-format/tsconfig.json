{
  "include": ["src/**/*"],

  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES2017",
    "lib": [
      "ES2017", "DOM"
    ],
    "outDir": "lib",
    "module": "esnext",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
  }
}
